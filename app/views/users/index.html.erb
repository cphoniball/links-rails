<header class="mb-4">
    <h1 class="text-3xl font-bold">Users</h1>
</header>
<ul>
    <div class="flex flex-row-reverse mb-4">
        <%= link_to "Create User", new_user_path, { class: "p-3 bg-blue-600 hover:bg-blue-700 text-white rounded" } %>
    </div>
    <% @users.each do |user| %>
        <li class="border mb-2 rounded shadow hover:border-blue-300">
            <%= link_to user.username, user_path(user), { class: 'block p-4 w-full' } %>
        </li>
    <% end %>
</ul>
